{% extends 'OroUIBundle:actions:index.html.twig' %}
{% import 'OroUIBundle::macros.html.twig' as UI %}
{% set pageTitle = 'Issues'|trans %}

{% block navButtons %}
    {% include 'OroImportExportBundle:ImportExport:buttons.html.twig' with {
        exportProcessor: 'vitalii_tracker_issue',
        dataGridName: 'issues-grid'
    } %}

    {% if resource_granted('tracker.issue_view') %}
        <div class="btn-group">
            {{ UI.addButton({
                'path': path('tracker.issue_create'),
                'entity_label': 'Issue'|trans
            }) }}
        </div>
    {% endif %}
{% endblock %}
